    <%= f.label :last %><br />
    <%= f.text_field :last %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>

  </div>
  <div class="field">
    <%= f.label :cell %><br />
    <%= f.text_field :cell %>
  </div>
  <div class="field">
    <%= f.label :vehicle_make %><br />
    <%= f.select :vehicle_make, VehicleMake.all.collect { |v| [ v.make, v.make ] }, {:include_blank => 'Please Select'} %>
  </div>
  <div class="field">
    <%= f.label :vehicle_model %><br />
    <%= f.text_field :vehicle_model %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
